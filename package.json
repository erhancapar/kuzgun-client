{
  "name": "kuzgun-client",
  "version": "1.0.0",
  "description": "**Kuzgun** is a privacy-focused, end-to-end encrypted communication app built with Electron.",
  "main": "main.js",
  "author": "Can Ã‡ebi <can@cebi.tr>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erhancapar/kuzgun-client.git"
  },
  "bugs": {
    "url": "https://github.com/erhancapar/kuzgun-client/issues"
  },
  "homepage": "https://github.com/erhancapar/kuzgun-client#readme",
  "keywords": [],
  "scripts": {
    "start": "electron .",
    "build:css": "npx tailwindcss -i ./src/styles.css -o ./public/styles.css --watch",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --linux"
  },
  "build": {
    "appId": "com.app.kuzgun",
    "productName": "Kuzgun",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "public/**/*",
      "node_modules/**/*",
      "build/**/*"
    ],
    "extraResources": [
      "public/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8",
    "tailwindcss-filters": "^3.0.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "electron-store": "^10.0.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13"
  }
}
